<Red@Image>:
  source: 'red.png'
  fit_mode: 'scale-down'
  size_hint: [1, 1/6]

<Yellow@Image>
  source: 'yellow.png'
  fit_mode: 'scale-down'
  size_hint: [1, 1/6]

<EmptyStackLayout@StackLayout>:
  orientation: 'bt-lr'

<ColumnButton@Button>:
  background_color: (144/88,238/88,144/88,1)
  background_disabled_normal: 'light_red.png'
  markup: True

<ConnectFourBoxLayout@BoxLayout>:
  orientation: 'vertical'

  GridLayout:
    cols: 7
    EmptyStackLayout:
      id: one
    EmptyStackLayout:
      id: two
    EmptyStackLayout:
      id: three
    EmptyStackLayout:
      id: four
    EmptyStackLayout:
      id: five
    EmptyStackLayout:
      id: six
    EmptyStackLayout:
      id: seven

  GridLayout:
    cols: 7
    size_hint_y: .25
    ColumnButton:
      id: buttonOne
      text: '[color=000000]Column 1[/color]'
      on_release:
        app.get_running_app().send_message(app.color, '1')
        if one.add_color(1) == True:\
        buttonOne.set_disabled(True)
    ColumnButton:
      id: buttonTwo
      text: '[color=000000]Column 2[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '2')
        if two.add_color(2) == True:\
        buttonTwo.set_disabled(True)
    ColumnButton:
      id: buttonThree
      text: '[color=000000]Column 3[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '3')
        if three.add_color(3) == True:\
        buttonThree.set_disabled(True)
    ColumnButton:
      id: buttonFour
      text: '[color=000000]Column 4[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '4')
        if four.add_color(4) == True:\
        buttonFour.set_disabled(True)
    ColumnButton:
      id: buttonFive
      text: '[color=000000]Column 5[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '5')
        if five.add_color(5) == True:\
        buttonFive.set_disabled(True)
    ColumnButton:
      id: buttonSix
      text: '[color=000000]Column 6[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '6')
        if six.add_color(6) == True:\
        buttonSix.set_disabled(True)
    ColumnButton:
      id: buttonSeven
      text: '[color=000000]Column 7[/color]'
      on_release: 
        app.get_running_app().send_message(app.color, '7')
        if seven.add_color(7) == True:\
        buttonSeven.set_disabled(True)